{
  "name": "bela-pro",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run -w @bela-pro/api dev",
    "dev:web": "npm run -w @bela-pro/web dev",
    "dev:api": "npm run -w @bela-pro/api dev",
    "db:generate": "npm run -w @bela-pro/api db:generate",
    "db:migrate": "npm run -w @bela-pro/api db:migrate",
    "db:migrate:deploy": "npm run -w @bela-pro/api db:migrate:deploy",
    "lint": "npm run -ws lint",
    "test": "npm run -ws test",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f api web",
    "docker:db:generate": "docker compose run --rm api npm run db:generate",
    "docker:db:migrate": "docker compose run --rm api npm run db:migrate",
    "build": "npm run build -w @bela-pro/api",
    "build:api": "npm run build -w @bela-pro/api",
    "build:web": "npm run build -w @bela-pro/web",
    "start:api": "node apps/api/dist/main.js"
  },
  "engines": {
    "node": ">=20"
  }
}
